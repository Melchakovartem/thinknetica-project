<% if @question.errors.present? %>
    <% @question.errors.full_messages.each do |message| %>
        $('.question-errors').html('<%= j message %>');
    <% end %>
<% else %>
    $(".question-<%= @question.id %>").replaceWith("<%= j render partial: 'questions/edit_question', locals: { question: @question } %>");
<% end %>
